<mvc:View
    controllerName="quoteconvertor.quoteconvertor.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    displayBlock="true">
    <Page
        id="detailPage"
        title="{QuoteNumber}"
        showNavButton="true"
        navButtonPress=".onNavBack">
        <content>
            <ObjectHeader
                id="objectHeader"
                title="{CustomerName}"
                number="{
                    parts: ['GrandTotal', 'Currency'],
                    formatter: '.formatCurrency'
                }">
                <attributes>
                    <ObjectAttribute
                        title="Quote Number"
                        text="{QuoteNumber}"/>
                    <ObjectAttribute
                        title="Advisor"
                        text="{AdvisorName}"/>
                    <ObjectAttribute
                        title="Quote Date"
                        text="{
                            path: 'QuoteDate',
                            formatter: '.formatDate'
                        }"/>
                    <ObjectAttribute
                        title="Valid Until"
                        text="{
                            path: 'ValidUntil',
                            formatter: '.formatDate'
                        }"/>
                </attributes>
                <statuses>
                    <ObjectStatus
                        text="{Status}"
                        state="{
                            path: 'Status',
                            formatter: '.formatStatusState'
                        }"/>
                </statuses>
            </ObjectHeader>
            
            <IconTabBar
                id="iconTabBar"
                class="sapUiResponsiveContentPadding">
                <items>
                    <IconTabFilter
                        text="Customer Information"
                        key="customer">
                        <f:SimpleForm
                            id="customerForm"
                            editable="false"
                            layout="ResponsiveGridLayout"
                            labelSpanXL="4"
                            labelSpanL="4"
                            labelSpanM="4"
                            labelSpanS="12"
                            emptySpanXL="0"
                            emptySpanL="0"
                            emptySpanM="0"
                            emptySpanS="0"
                            columnsXL="2"
                            columnsL="2"
                            columnsM="1">
                            <f:content>
                                <Label text="Customer Name"/>
                                <Text text="{CustomerName}"/>
                                
                                <Label text="Email"/>
                                <Text text="{CustomerEmail}"/>
                                
                                <Label text="Phone"/>
                                <Text text="{CustomerPhone}"/>
                                
                                <Label text="Address"/>
                                <Text text="{CustomerAddress}"/>
                            </f:content>
                        </f:SimpleForm>
                    </IconTabFilter>
                    
                    <IconTabFilter
                        text="Quote Details"
                        key="quote">
                        <f:SimpleForm
                            id="quoteForm"
                            editable="false"
                            layout="ResponsiveGridLayout"
                            labelSpanXL="4"
                            labelSpanL="4"
                            labelSpanM="4"
                            labelSpanS="12"
                            emptySpanXL="0"
                            emptySpanL="0"
                            emptySpanM="0"
                            emptySpanS="0"
                            columnsXL="2"
                            columnsL="2"
                            columnsM="1">
                            <f:content>
                                <Label text="Total Price"/>
                                <Text text="{
                                    parts: ['TotalPrice', 'Currency'],
                                    formatter: '.formatCurrency'
                                }"/>
                                
                                <Label text="Discount"/>
                                <Text text="{
                                    parts: ['DiscountPercent', 'DiscountAmount', 'Currency'],
                                    formatter: '.formatDiscount'
                                }"/>
                                
                                <Label text="Tax Amount"/>
                                <Text text="{
                                    parts: ['TaxAmount', 'Currency'],
                                    formatter: '.formatCurrency'
                                }"/>
                                
                                <Label text="Grand Total"/>
                                <Text text="{
                                    parts: ['GrandTotal', 'Currency'],
                                    formatter: '.formatCurrency'
                                }"/>
                                
                                <Label text="Installation Required"/>
                                <Text text="{
                                    path: 'InstallationRequired',
                                    formatter: '.formatBoolean'
                                }"/>
                                
                                <Label text="Installation Date"/>
                                <Text text="{
                                    path: 'InstallationDate',
                                    formatter: '.formatDate'
                                }"/>
                                
                                <Label text="Installation Cost"/>
                                <Text text="{
                                    parts: ['InstallationCost', 'Currency'],
                                    formatter: '.formatCurrency'
                                }"/>
                                
                                <Label text="Notes"/>
                                <Text text="{Notes}"/>
                            </f:content>
                        </f:SimpleForm>
                    </IconTabFilter>
                    
                    <IconTabFilter
                        text="Items"
                        key="items">
                        <Table
                            id="itemsTable"
                            items="{Items}"
                            class="sapUiResponsiveMargin"
                            width="auto">
                            <columns>
                                <Column>
                                    <Text text="Product"/>
                                </Column>
                                <Column>
                                    <Text text="Type"/>
                                </Column>
                                <Column>
                                    <Text text="Colour"/>
                                </Column>
                                <Column>
                                    <Text text="Dimensions"/>
                                </Column>
                                <Column>
                                    <Text text="Qty"/>
                                </Column>
                                <Column hAlign="End">
                                    <Text text="Unit Price"/>
                                </Column>
                                <Column hAlign="End">
                                    <Text text="Total"/>
                                </Column>
                            </columns>
                            <items>
                                <ColumnListItem>
                                    <cells>
                                        <ObjectIdentifier
                                            title="{ProductName}"
                                            text="{RoomLocation}"/>
                                        <Text text="{ProductType}"/>
                                        <VBox>
                                            <Text text="{Colour}"/>
                                            <Text text="{ColourCode}" class="sapUiTinyMarginTop"/>
                                        </VBox>
                                        <VBox>
                                            <Text text="{
                                                parts: ['Width', 'Height', 'MeasurementUnit'],
                                                formatter: '.formatDimensions'
                                            }"/>
                                            <Text text="{
                                                parts: ['SquareMeters'],
                                                formatter: '.formatSquareMeters'
                                            }" class="sapUiTinyMarginTop"/>
                                        </VBox>
                                        <Text text="{Quantity}"/>
                                        <ObjectNumber
                                            number="{UnitPrice}"
                                            unit="{/Currency}"/>
                                        <ObjectNumber
                                            number="{TotalPrice}"
                                            unit="{/Currency}"
                                            emphasized="true"/>
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </IconTabFilter>
                </items>
            </IconTabBar>
        </content>
    </Page>
</mvc:View>