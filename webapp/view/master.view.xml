<mvc:View
    controllerName="quoteconvertor.quoteconvertor.controller.Master"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true">
    <Page
        id="masterPage"
        title="Quotes"
        showNavButton="false">
        <content>
            <List
                id="masterList"
                items="{/Quotes}"
                mode="SingleSelectMaster"
                selectionChange=".onSelectionChange">
                <items>
                    <ObjectListItem
                        type="Active"
                        press=".onSelectionChange"
                        title="{CustomerName}"
                        number="{
                            parts: ['GrandTotal', 'Currency'],
                            formatter: '.formatCurrency'
                        }"
                        numberUnit="">
                        <attributes>
                            <ObjectAttribute text="{QuoteNumber}"/>
                            <ObjectAttribute text="{AdvisorName}"/>
                        </attributes>
                        <firstStatus>
                            <ObjectStatus
                                text="{Status}"
                                state="{
                                    path: 'Status',
                                    formatter: '.formatStatusState'
                                }"/>
                        </firstStatus>
                        <secondStatus>
                            <ObjectStatus
                                text="{
                                    path: 'QuoteDate',
                                    formatter: '.formatDate'
                                }"/>
                        </secondStatus>
                    </ObjectListItem>
                </items>
            </List>
        </content>
    </Page>
</mvc:View>